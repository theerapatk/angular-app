    "@angular/platform-browser": "~11.1.0",
    "@angular/platform-browser-dynamic": "~11.1.0",
    "@angular/router": "~11.1.0",
    "chart.js": "^2.9.4",
    "http-server": "^0.12.3",
    "ng2-charts": "^2.4.2",
    "ngx-infinite-scroll": "^10.0.1",
    "ngx-toastr": "^13.2.0",
    "rxjs": "~6.6.0",
