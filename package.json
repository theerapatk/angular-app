    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.2.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "nodemon": "^2.0.7",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.1.2"
  },
  "scripts": {
    "ng": "ng",
    "start": "node dist/pokedex-server/app.js",
    "build": "ng build && tsc -p pokedex-server",
    "buildprod": "ng build --aot --prod && tsc -p pokedex-server",
    "dev": "concurrently \"ng serve --open\" \"tsc -w -p pokedex-server\" \"nodemon dist/pokedex-server/app.js\"",
    "prod": "concurrently \"ng build --aot --prod && tsc -p pokedex-server && node dist/pokedex-server/app.js\"",
    "test": "ng test",
    "lint": "ng lint && htmlhint \"pokedex-client/**/*.html\" && sass-lint \"pokedex-client/**/*.scss\" -v && tslint pokedex-server/**/**.ts{,x}",
    "e2e": "ng e2e"
  },
  "repository": {
    "type": "git",
